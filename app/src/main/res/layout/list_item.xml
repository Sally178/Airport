<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/show_flight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:ellipsize="none"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_weight="2"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:singleLine="false"
        android:textSize="17.0sp"
        android:textColor="@android:color/black"
        />

    <View style="@style/vertical_layout" />

    <TextView
        android:id="@+id/show_origin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_weight="3"
        android:ellipsize="none"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="17.0sp"
        />

    <View style="@style/vertical_layout" />

    <TextView
        android:id="@+id/show_destination"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_weight="3"
        android:ellipsize="none"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="17.0sp"
        />

    <View style="@style/vertical_layout" />

    <TextView
        android:id="@+id/show_pass"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:ellipsize="none"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_weight="2"
        android:paddingTop="5dp"
        android:singleLine="false"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="17.0sp"
        />

    <View style="@style/vertical_layout" />

    <TextView
        android:id="@+id/show_planned"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:ellipsize="none"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_weight="4"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="17.0sp"
        />

    <View style="@style/vertical_layout" />

    <TextView
        android:id="@+id/show_terminal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:ellipsize="none"
        android:gravity="center"
        android:layout_weight="3"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:singleLine="false"
        android:textSize="17.0sp"
        android:textColor="@android:color/black"
        />

    <View style="@style/vertical_layout" />

    <TextView
        android:id="@+id/show_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:ellipsize="none"
        android:gravity="center"
        android:layout_weight="2"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="15.0sp"
        />

</LinearLayout>